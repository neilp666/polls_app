<h1>Listing polls</h1>

<table class="table">

  <tbody>
    <% @polls.each do |poll| %>
      <tr>
        <td><%= link_to poll.title %></td>
        <td><%= link_to 'Show', poll %></td>
        <td><%= link_to 'Edit', edit_poll_path(poll) %></td>
        <td><%= link_to 'Add Question', new_poll_question_path(poll), class: "btn btn-danger" %>
        <td><%= link_to 'Destroy', poll, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Poll', new_poll_path, class: "btn btn-primary" %>
