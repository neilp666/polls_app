<h1>Listing questions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Kind</th>
      <th>Poll</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.title %></td>
        <td><%= question.kind %></td>
        <td><%= question.poll %></td>
        <td><%= link_to 'Show', [ @poll, question ] %></td>
        <td><%= link_to 'Edit', edit_poll_question_path(@poll, question) %></td>
        <td><%= link_to 'Destroy', [ @poll, question ], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

